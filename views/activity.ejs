<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Activity</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/workouts">Workouts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/shop">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/activity">Activity</a>
                </li>
            </ul>
        </div>
    </nav>
    </nav>
    <div class="container mt-4">
        <h1 class="text-center">Activity</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Height</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% exercises.forEach(exercise => { %>
                <tr>
                    <td><%= exercise.exercise_id %></td>
                    <td><%= exercise.name %></td>
                    <td><%= exercise.age %></td>
                    <td><%= exercise.height %></td>
                    <td>
                        <a href="/edit_exercise/<%= exercise.exercise_id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/delete_exercise/<%= exercise.exercise_id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/add_exercise" class="btn btn-primary">Add New Exercise</a>
    </div>
</body>
</html>
